@model WebApplication3.Models.Adviewmodel
@{
    ViewBag.Title = "ViewAd";
   Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<style>
   
</style>



    <div class="col-lg-12 col-md-8">

        <div>
            <h1>@Model.pro_name <small>AD-ID:@Model.pro_id</small></h1>
        </div>

        <img src="@Url.Content(@Model.pro_image)" style="width:600PX; height:250PX" />

        <div>
            <h1>Description: </h1>
            <p>@Model.pro_des</p>
        </div>

        <table>

            <tr> <td>Price: </td> <td>@Model.pro_price </td> </tr>
            <tr> <td>Category: </td> <td>@Model.cat_name </td> </tr>
          
            <tr> <td>Contact: </td> <td>@Model.u_contact  </td> </tr>
            <tr>
                <td colspan="2">
                    @if (Convert.ToInt32(Session["u_id"]) == Convert.ToInt32(Model.pro_fk_user))
                    {

                        @Html.ActionLink("Close this Ad", "DeleteAd", new { @class = "btn btn-info", id = Model.pro_id })



                    }
                </td>
            </tr>

        </table>



    </div>




  


