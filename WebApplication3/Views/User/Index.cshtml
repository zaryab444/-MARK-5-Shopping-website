@using PagedList.Mvc
@model  PagedList.IPagedList<WebApplication3.Models.tbl_category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<style>
  

</style>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View  Category</title>
    <link href="~/Content/paginition.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div style="height:1150px; ">
        <div class="row">
            <div class="col-lg-12" style="height:150px; border:1px solid solid; ">


                <img src="~/Content/img/Modern-e-Commerce-Web-Design-Trends.-Part-2.gif" style="width:100%; height:100%" />


            </div>

        </div>



        <div class="sidebar">
            <img src="~/Content/img/VF_banner4.gif " class="img img-responsive" style="width:100%; height:100%" />
        </div>

            <div class="col-lg-8 col-md-8">
                <div class="row">
                    @if (Model != null)
{
    foreach (var item in Model)
    { <div class="container">
        <div class="col-lg-4 col-md-4" style="height: 200px; margin-top: 100px; margin-left: 100px;" >

            <img class="img img-responsive cimg" src="@Url.Content(item.cat_image)" style=" height: 100%; width: 100%; border-radius: 50px 50px 50px 50px; " />
            <h4 style="color:#808080; text-align:center"> @Html.ActionLink(@item.cat_name, "Ads", new { id = @item.cat_id })</h4>

        </div>
    </div>

    }
}
                </div>
            </div>


           





        </div>


    

    <div id="container" style="margin-left: 20px">
        <p></p>
        <p></p>
        <div class="pagination" style="margin-left: 400px">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>
</body>
</html>




